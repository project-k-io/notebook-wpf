<UserControl x:Class="ProjectK.Notebook.Views.TaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:ProjectK.Notebook.ViewModels;assembly=ProjectK.Notebook.ViewModels"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             xmlns:domain="clr-namespace:ProjectK.Notebook.Domain;assembly=ProjectK.Notebook.Domain"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="300">
    <UserControl.Resources>
        <viewModels:TaskViewModel
            x:Key="Model"
            DateStarted="{x:Static system:DateTime.Now}"
            DateEnded="{x:Static system:DateTime.Now}"
            >
            <viewModels:TaskViewModel.Model>
                <domain:TaskModel 
                    Name="May"
                    Context="Month"
                    Type="TaskModel"
                    SubType="Testing"
                    Description="Test TaskModel"
                    >
                </domain:TaskModel>
            </viewModels:TaskViewModel.Model>
        </viewModels:TaskViewModel>
    </UserControl.Resources>

    <Grid d:DataContext="{StaticResource Model}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Context-->
            <Label Content="Context" Grid.Row="1" Grid.Column="1" />
            <ComboBox Grid.Row="1" Grid.Column="3" IsEditable="true" IsReadOnly="true" ItemsSource="{Binding ContextList}"
                  Text="{Binding Path=Model.Context}" />
            <!--Title-->
            <Label Content="Title" Grid.Row="2" Grid.Column="1" />
            <ComboBox Grid.Row="2" Grid.Column="3" IsEditable="true" ItemsSource="{Binding TitleList}"
                  Text="{Binding Path=Model.Name}" />
            <!--Start-->
            <Label Content="Start" Grid.Row="5" Grid.Column="1" />
            <Grid Row="5" Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <DatePicker Grid.Column="0" 
                             SelectedDate="{Binding Path=Model.DateStarted}" />
                <TextBox Margin="2" Grid.Column="2" 
                         Text="{Binding Path=TimeStarted, StringFormat=t}" />
                <Button Margin="2" Grid.Column="3" Width="40" 
                        Content="Now" 
                        Command="{Binding CommandSetStartedTime}" />
            </Grid>
            <!--End-->
            <Label Content="End" Grid.Row="6" Grid.Column="1" />
            <Grid Row="6" Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <DatePicker 
                    Grid.Column="0" 
                    SelectedDate="{Binding Path= Model.DateEnded}" />

                <TextBox 
                    Grid.Column="2" Margin="2"
                    Text="{Binding Path=TimeStarted, StringFormat=t}"  
                    />
                <Button Grid.Column="3" Width="40" Content="Now" 
                        Command="{Binding CommandSetEndedTime}" />
            </Grid>
            <!--Duration-->
            <Label Content="Duration" Grid.Row="7" Grid.Column="1" />
            <TextBox Grid.Row="7" Grid.Column="3">
                <TextBox.Text>
                    <MultiBinding StringFormat="{}{0:D1} hrs {1:D1} min" Mode="OneWay">
                        <Binding Path="Duration.Hours" />
                        <Binding Path="Duration.Minutes" />
                    </MultiBinding>
                </TextBox.Text>
            </TextBox>
            <!--Type-->
            <Label Content="Type" Grid.Row="8" Grid.Column="1" />
            <ComboBox Grid.Row="8" Grid.Column="3" IsEditable="true" 
                      ItemsSource="{Binding TypeList}" 
                      Text="{Binding  Path=Model.Type}" />
            <!--SubType-->
            <Label Content="SubType" Grid.Row="9" Grid.Column="1" />
            <TextBox Grid.Row="9" Grid.Column="3" 
                     Text="{Binding Path=Model.SubType}" />
        </Grid>

        <!--Description-->
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Description" />
            <TextBox Grid.Row="1" 
                     MinHeight="60" 
                     Text="{Binding Path=TimeStarted}" 
                     TextWrapping="Wrap"
                     AcceptsReturn="True" 
                     SpellCheck.IsEnabled="True"
                     VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</UserControl>